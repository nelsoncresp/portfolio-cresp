---
import { Icon } from 'astro-icon/components';

interface Props {
    name: string;
    icon: string; // "mdi:angular"
}

const { name, icon } = Astro.props;
---

<div class="flex flex-col items-center group">
    <div class="w-16 h-16 flex items-center justify-center bg-white border border-stone-200 rounded-full shadow-sm group-hover:border-[#C5A059] group-hover:shadow-md transition-all duration-300">
        <Icon name={icon} class="w-8 h-8 text-stone-600 group-hover:text-[#C5A059] transition-colors" />
    </div>
    <span class="mt-3 text-xs font-semibold uppercase tracking-wider text-stone-500 group-hover:text-stone-900">{name}</span>
</div>